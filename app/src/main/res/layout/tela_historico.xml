<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/barra_selecionadora"


            />
    </FrameLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="165dp"
        android:layout_height="70dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/estilo_btn_verde"
        android:drawableRight="@drawable/ic_grafic"
        android:fontFamily="@font/abeezee"
        android:gravity="left"
        android:padding="10dp"
        android:text="Ultimos 15 dias"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/estilo_barra_cima"
        android:fontFamily="@font/abeezee"
        android:gravity="center"
        android:padding="10dp"
        android:text="Historico"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/estilo_app_bar_botton" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />


    </FrameLayout>

    <!-- CAIXA COM OS BOTÃ•ES DE BAIXO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:gravity="top"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="82dp"
            android:background="@drawable/btn_historico" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_medir"
            android:foregroundGravity="bottom" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginLeft="82dp"
            android:background="@drawable/btn_config" />


    </LinearLayout>

</FrameLayout>